<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>

<VBox 
	xmlns:fx="http://javafx.com/fxml/1"
	spacing="20"
 	prefWidth="100"
	fx:controller="com.gaspar.clipsync.bluetooth.BluetoothPaneController"
	alignment="CENTER">
	
	<Text
		text="Bluetooth mode"
		style="-fx-font-size: 20px"/>
	
	<HBox 
		fx:id="resultHolder"
		alignment="CENTER"
		spacing="10"/>
	
	<BorderPane>
		<left>
		<Text
			fx:id="backendInfoText"
			text="Using BlueCove backend"
			styleClass="backendInfoText"/>
		</left>
		
		<right>
		<Button
			fx:id="backButton"
			text="Back"
			styleClass="button"
			onAction="#backButtonPressed"/>
		</right>
	</BorderPane>
</VBox>

