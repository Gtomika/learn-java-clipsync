<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>

<VBox
 	xmlns:fx="http://javafx.com/fxml/1"
 	spacing="20"
 	prefWidth="100"
 	fx:controller="com.gaspar.clipsync.SelectorPaneController"
 	alignment="CENTER">
	
	<Text
		text="Select a clip syncing mode!"
		style="-fx-font-size: 20px"/>
	
	<VBox
		fx:id="buttonHolder"
		alignment="CENTER"/>
	
	<BorderPane>
		<left>
		<CheckBox 
			fx:id="rememberCheckBox"
			text="Remember mode"/>
		</left>
		
		<right>
		<Button
			fx:id="nextButton"
			text="Next"
			styleClass="button"
			onAction="#nextButtonPressed"/>
		</right>
	</BorderPane>
	
</VBox>

